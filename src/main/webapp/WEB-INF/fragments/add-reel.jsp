<form class="col-6 needs-validation" action="add-reel" novalidate method="post">
    <div class="container">
        <table class="table caption-top">
            <thead class="table-success">
            <tr>
                <td class="text-center align-middle">
                    <label for="inputM" class="form-label">Size</label>
                    <input type="text" class="form-control" name="size" id="inputM" required></td>
                <td class="text-center align-middle">
                    <label for="inputL" class="form-label">Nylon Line</label>
                    <input type="text" class="form-control" name="nylonLine" id="inputL" required></td>
                <td class="text-center align-middle">
                    <label for="inputP" class="form-label">Ball Bearings</label>
                    <input type="text" class="form-control" name="ballBearings" id="inputP" required></td>
                <td class="text-center align-middle">
                    <label for="inputLur" class="form-label">Gear Ratio</label>
                    <input type="text" class="form-control" name="gearRatio" id="inputLur" required></td>
                <td class="text-center align-middle">
                    <label for="inputLin" class="form-label">Weight</label>
                    <input type="text" class="form-control" name="weight" id="inputLin" required></td>
                <td class="text-center align-middle">
                    <label for="inputA" class="form-label">Spool Mat</label>
                    <input type="text" class="form-control" name="spoolMaterial" id="inputA" required></td>
                <td class="text-center align-middle">
                    <label for="inputW" class="form-label">Line Retrieve</label>
                    <input type="text" class="form-control" name="lineRetrieve" id="inputW" required></td>
                <td class="text-center align-middle">
                    <label for="inputS" class="form-label">Model</label>
                    <input type="text" class="form-control" name="model" id="inputS" required></td>
                <td class="text-center align-middle">
                    <label for="inputPr" class="form-label">Price</label>
                    <input type="text" class="form-control" name="price" id="inputPr" required></td>

                <td class="text-center align-middle">
                    <div class="btn-group" role="group" aria-label="Basic example">
                        <button type="submit" class="btn btn-primary">Add reels</button>
                        <button type="reset" class="btn btn-secondary">Reset</button>
                    </div>
                </td>
            </tr>
            </thead>
        </table>
    </div>
</form>